.container {
  width: 100%;
  height: 100px;
  margin-bottom: 16px;

  display: flex;
  flex-direction: column;
  padding-top: 8px;
  justify-content: space-between;

  font-size: 32px;
  color: var(--color-deep-ocean);

  border-radius: 4px;
  background: var(--color-deep-ocean-light);
  box-shadow: var(--shadow-default);

  opacity: 0.9;
}

.header {
  width: 100%;
  display: flex;
  justify-content: center;
}

.content {
  width: 100%;
}